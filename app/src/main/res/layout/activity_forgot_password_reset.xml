<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/reset_toolbar_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_black"
        android:contentDescription="@string/content_desc_back" />

    <TextView
        android:id="@+id/reset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/reset_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/reset_mascot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_gundamshop"
        android:layout_below="@id/reset_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/avatar_desc" />

    <TextView
        android:id="@+id/reset_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_mascot"
        android:layout_marginTop="12dp"
        android:text="@string/reset_subtitle"
        android:textAlignment="center" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reset_pw_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_subtitle"
        android:layout_marginTop="16dp"
        android:hint="@string/label_password"
        app:endIconMode="password_toggle">

        <EditText
            android:id="@+id/reset_pw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:importantForAutofill="yes" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reset_confirm_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_pw_til"
        android:layout_marginTop="12dp"
        android:hint="@string/label_confirm_password"
        app:endIconMode="password_toggle">

        <EditText
            android:id="@+id/reset_confirm_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:importantForAutofill="yes" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/reset_pw_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_confirm_til"
        android:layout_marginTop="8dp"
        android:text="@string/reset_pw_note" />

    <Button
        android:id="@+id/reset_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:text="@string/back" />

    <Button
        android:id="@+id/reset_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:text="@string/confirm"
        android:enabled="false"
        android:backgroundTint="@color/red_600"
        android:textColor="@android:color/white" />

</RelativeLayout>
