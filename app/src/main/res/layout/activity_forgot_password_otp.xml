<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/otp_toolbar_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_black"
        android:contentDescription="@string/content_desc_back" />

    <TextView
        android:id="@+id/otp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/otp_title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/otp_mascot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_gundamshop"
        android:layout_below="@id/otp_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/avatar_desc" />

    <TextView
        android:id="@+id/otp_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_mascot"
        android:layout_marginTop="12dp"
        android:text="@string/otp_desc"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/otp_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_desc"
        android:layout_marginTop="8dp"
        android:text="@string/otp_email_placeholder"
        android:textStyle="bold"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/otp_boxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_phone"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <com.huyntd.superapp.gundamshop_mobilefe.views.OtpEditText
            android:id="@+id/otp_1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:maxLines="1"
            android:padding="0dp"
            android:contentDescription="@string/otp_digit_1" />

        <com.huyntd.superapp.gundamshop_mobilefe.views.OtpEditText
            android:id="@+id/otp_2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:maxLines="1"
            android:padding="0dp"
            android:contentDescription="@string/otp_digit_2" />

        <com.huyntd.superapp.gundamshop_mobilefe.views.OtpEditText
            android:id="@+id/otp_3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:maxLines="1"
            android:padding="0dp"
            android:contentDescription="@string/otp_digit_3" />

        <com.huyntd.superapp.gundamshop_mobilefe.views.OtpEditText
            android:id="@+id/otp_4"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:maxLines="1"
            android:padding="0dp"
            android:contentDescription="@string/otp_digit_4" />

        <com.huyntd.superapp.gundamshop_mobilefe.views.OtpEditText
            android:id="@+id/otp_5"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:maxLines="1"
            android:padding="0dp"
            android:contentDescription="@string/otp_digit_5" />

        <com.huyntd.superapp.gundamshop_mobilefe.views.OtpEditText
            android:id="@+id/otp_6"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:maxLines="1"
            android:padding="0dp"
            android:contentDescription="@string/otp_digit_6" />

    </LinearLayout>

    <Button
        android:id="@+id/otp_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:text="@string/back" />

    <Button
        android:id="@+id/otp_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:text="@string/confirm"
        android:enabled="false"
        android:backgroundTint="@color/red_600"
        android:textColor="@android:color/white" />

</RelativeLayout>
