<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_md">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/padding_md">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ổ cứng di động SSD Kingston XS1000 USB 3.2 Gen 2 1TB - Đen"
                    android:textSize="@dimen/normal_text"
                    android:textColor="@color/text_dark"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16/02/2025 11:38"
                    android:textSize="@dimen/small_text"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã giao hàng"
                    android:background="@drawable/badge_rounded"
                    android:padding="6dp"
                    android:textColor="@color/muted_green_text"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.890.000đ"
                    android:textColor="@color/brand_red"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>
        </LinearLayout>

        <!-- action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="@dimen/padding_sm">

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem chi tiết"
                android:textColor="@color/brand_red"
                android:backgroundTint="@android:color/white"
                app:strokeColor="@color/brand_red"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
